h1 = t('activerecord.models.cuff_type')
hr
= search_form_for @q do |f|
  .row
    .col-sm-5
      = f.input :name_cont, required: false, label: t('activerecord.attributes.cuff_type.name')
      = hidden_field_tag :mode, params[:mode]
  .btn-toolbar
    .btn-group.mr-2
      = f.submit class: "btn btn-primary"
    .btn-group.mr-2
      = button_tag t('helpers.submit.close'), type: 'button', class: "btn btn-secondary", onclick: 'window.close()'
p
table.table.table-striped.table-hover.table-responsive.table-bordered
  thead
    tr
      th = sort_link(@q, :name)
  tbody
    - @cuff_types.each do |cuff_type|
      tr
      - if params[:mode] = 'dialog'
        td onclick="window.opener.dialog_select('cuff_type', '#{cuff_type.name}', 'cuff_type_id', '#{cuff_type.id}');window.close();"
          = cuff_type.name
      - else
        td
          = cuff_type.name

br
= paginate @cuff_types
